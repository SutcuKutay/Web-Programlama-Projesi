@model WebProgramlamaProjesi.Models.Kullanici

@{
    ViewData["Title"] = "Login";
}
<div class="container">
    <div class="col-md-4 col-lg-4 text-center centered rounded-lg" style="border: 4px solid orange">
        <form asp-action="Giris">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">E-mail</label>
                <input asp-for="Email" class="form-control rounded-lg" style="border: 2px solid black" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sifre" class="control-label">Şifre</label>
                <input asp-for="Sifre" class="form-control rounded-lg" style="border: 2px solid black" />
                <span asp-validation-for="Sifre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Giriş" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
